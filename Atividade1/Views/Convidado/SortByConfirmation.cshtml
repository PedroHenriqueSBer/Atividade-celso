@model IEnumerable<Atividade1.Models.Convidado>

@{
    ViewData["Title"] = "SortByConfirmation";
}

<h1>SortByConfirmation</h1>

<<p>
    <a asp-action="Create">Adicionar novo convidado</a>
</p>


<p>
    <a asp-action="SortByNotConfirmation">Listar apenas quem não confirmou presença</a>
</p>

<p>
    <a asp-action="Index">Listar todos os convidados</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Email
            </th>
            <th>
                Telefone
            </th>
            <th>
                Comparecimento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.EMail)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.comparecimentoString)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
